{
    "name": "stefanotorresi/thorr-nonce",
    "description": "A simple library providing a service class to create and consume nonces.",
    "type" : "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Stefano Torresi",
            "email": "stefano@torresi.io"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^5.6 || ^7.0",
        "stefanotorresi/thorr-persistence": "^2.0"
    },
    "suggest": {
        "stefanotorresi/thorr-persistence-doctrine": "Required to use the Doctrine adapter"
    },
    "require-dev": {
        "stefanotorresi/thorr-persistence-doctrine": "^2.0",
        "zendframework/zend-modulemanager": "~2.3",
        "zendframework/zend-servicemanager": "~2.3",
        "fabpot/php-cs-fixer": "~1.5",
        "phpunit/phpunit": "^4.8"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        }
    },
    "autoload" : {
        "classmap": [
            "Module.php"
        ],
        "psr-4": {
            "Thorr\\Nonce\\": "src/",
            "Thorr\\Nonce\\Test\\": "tests/"
        }
    }
}
